generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("TEST_DATABASE_URL")
}

model Game {
  id      Int      @id @default(autoincrement())
  name    String
  url     String
  targets Target[]
  winners Winner[]
}

model Target {
  id     Int    @id @default(autoincrement())
  name   String
  x      Int
  y      Int
  games  Game   @relation(fields: [gameId], references: [id])
  gameId Int
}

model Winner {
  id        Int      @id @default(autoincrement())
  name      String
  startTime DateTime
  endTime   DateTime
  games  Game   @relation(fields: [gameId], references: [id])
  gameId Int
}
